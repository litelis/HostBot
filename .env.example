# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_ADMIN_USER_ID=your_admin_user_id_here

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120

# Agent Configuration
AGENT_NAME=SystemAgent
SAFETY_MODE=strict
LOG_LEVEL=INFO
LOG_DIR=./logs

# Permission Settings
ALLOW_DESKTOP_CONTROL=true
ALLOW_SYSTEM_COMMANDS=true
ALLOW_BROWSER_AUTOMATION=true
ALLOW_SOFTWARE_INSTALLATION=true

# Confirmation Settings
REQUIRE_CONFIRMATION_CRITICAL=true
REQUIRE_CONFIRMATION_DESKTOP=true
REQUIRE_CONFIRMATION_SYSTEM=true
CONFIRMATION_TIMEOUT=300

# Security
EMERGENCY_STOP_CODE=STOP123
